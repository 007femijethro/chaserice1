run = "python app.py"
language = "python3"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-22_05"

[env]
FLASK_APP = "app.py"
FLASK_ENV = "development"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 44609
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
